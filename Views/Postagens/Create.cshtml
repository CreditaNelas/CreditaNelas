@model CreditaNelas.Models.Postagens

@{
    ViewData["Title"] = "Create";
}

<section class="py-5">


    <div class="row justify-content-center py-5">
        <div class="create col-md-4 p-3">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-lg-6">
                        <label asp-for="Titulo" class="control-label"></label>
                        <input asp-for="Titulo" class="form-control" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>
                    <div class="col-lg-6">
                        <label asp-for="UrlImagem" class="control-label"></label>
                        <input asp-for="UrlImagem" class="form-control" />
                        <span asp-validation-for="UrlImagem" class="text-danger"></span>
                    </div>
                </div>

                <div class=row>
                    <div class="col-lg-6">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="col-lg-6">
                        <label asp-for="Whatsapp" class="control-label"></label>
                        <input asp-for="Whatsapp" class="form-control" />
                        <span asp-validation-for="Whatsapp" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <textarea rows="3" asp-for="Descricao" class="form-control"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Criar" class="btn btn-custom btn-block mt-4" />
                </div>
            </form>
            <div class="text-right">
                <a asp-action="Index" style="color: #522c43; text-decoration:none;">Voltar</a>
            </div>
        </div>
      </div>
    </div>
</section>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}