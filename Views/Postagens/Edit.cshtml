@model CreditaNelas.Models.Postagens

@{
    ViewData["Title"] = "Edit";
}

<section class="edit-body mt-5">
    <div class="container">
        <div class="title">
            <h1 class="text-center">Editar Projeto</h1>
            <p class="text-center mt-4">
                Lorem ipsum dolor sit, amet consectetur adipisicing elit. Fugiat
                neque cum reprehenderit, aspernatur maiores magnam dolorem, nihil,
                cupiditate culpa quibusdam laborum. Illo magnam sequi dolores
                placeat vitae iure unde officia!
            </p>
        </div>

        <div class="row justify-content-center mt-5">
            <div class="edit col-md-4 p-3">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id_Postagem" />
                    <div class="form-group">
                        <label asp-for="Titulo" class="control-label"></label>
                        <input asp-for="Titulo" class="form-control" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UrlImagem" class="control-label"></label>
                        <input asp-for="UrlImagem" class="form-control" />
                        <span asp-validation-for="UrlImagem" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                        <label asp-for="Whatsapp" class="control-label"></label>
                        <input asp-for="Whatsapp" class="form-control" />
                        <span asp-validation-for="Whatsapp" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Id_Usuario" class="control-label"></label>
                        <input asp-for="Id_Usuario" class="form-control" />
                        <span asp-validation-for="Id_Usuario" class="text-danger"></span>
                    </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Descricao" class="control-label"></label>
                        <textarea rows="3" asp-for="Descricao" class="form-control"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Editar" class="btn btn-custom btn-block mt-4" />
                    </div>
                </form>
                <div class="text-right">
                    <a asp-action="Index" style="color: #522c43; text-decoration: none;">Voltar</a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}