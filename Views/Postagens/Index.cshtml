@model IEnumerable<CreditaNelas.Models.Postagens>

@{
    ViewData["Title"] = "Index";
}

<h1>Projetos</h1>

<table class="table table-borderless text-center">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UrlImagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>	        
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Whatsapp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.UrlImagem)" alt="" style="width: 200px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>    
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Whatsapp)
            </td>
            <td>
                <a class="btn btn-info"  asp-action="Details" asp-route-id="@item.Id_Postagem">
                    <i class="fa-solid fa-circle-info"></i>
                </a> |
                <a class="btn btn-light" asp-action="Edit" asp-route-id="@item.Id_Postagem">
                    <i class="fas fa-pencil-alt"></i>
                </a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id_Postagem">
                    <i class="fas fa-times"></i>
                </a>
            </td>
        </tr>
}                    
    </tbody>
</table>